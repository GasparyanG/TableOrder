{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    {% if error %}
        <h1 class="alert-danger p-2">
            Sth went wrong please try again
        </h1>
    {% endif %}
    {% if notReservedTables %}
    <div class="row">
        {% for nestedArray in notReservedTables %}
            
        <div class="card col-6">
            {% set mainRestaurant = nestedArray[0].restaurant %}
            <img src={{"photo/restaurant/cover-photo/" ~ mainRestaurant.coverPhoto}} class ="card-img-top" alt="">
            <h1 class="card-title">
                {{mainRestaurant.name}}
            </h1>
            <div class="card-body">
                <div id="sth" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {% for key, table in nestedArray %}
                        {% if key == 0 %}
                        <div class="carousel-item active">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Location
                                    <span class="badge badge-primary badge-pill">{{table.restaurant.location}}</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    PersonAmount
                                    <span class="badge badge-primary badge-pill">{{table.personAmount}}</span>
                                </li>
                                <li class="list-group-item active">
                                    <a class="btn btn-primary" href={{"/restaurants/" ~ table.restaurant.name ~ "/" ~ table.restaurant.id ~ "/reservation?personAmount=" ~ queryParams.personAmount ~ 
                                    "&reservationDate" ~ queryParams.reservationDate ~ "&reservationTime=" ~ queryParams.reservationTime ~ "&tableId=" ~ table.id}}>Reserver</a>
                                </li>
                            </ul>
                        </div>
                        {% else %}
                        <div class="carousel-item">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Location
                                    <span class="badge badge-primary badge-pill">{{table.restaurant.location}}</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    PersonAmount
                                    <span class="badge badge-primary badge-pill">{{table.personAmount}}</span>
                                </li>
                                <li class="list-group-item active">
                                    <a class="btn btn-primary" href={{"/restaurants/" ~ table.restaurant.name ~ "/" ~ table.restaurant.id ~ "/reservation?personAmount=" ~ queryParams.personAmount ~ 
                                    "&reservationDate" ~ queryParams.reservationDate ~ "&reservationTime=" ~ queryParams.reservationTime ~ "&tableId=" ~ table.id}}>Reserver</a>
                                </li>
                            </ul>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#sth" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#sth" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    {% endfor %}
    </div>
    {% endif %}
{% endblock %}
